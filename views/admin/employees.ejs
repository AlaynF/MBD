<div class="section">
	<div class="container">
		<h2 class="title is-2">
			Employees
		</h2>

		<button ng-click="newEmployee()" class="button is-success is-medium">Create New Employee</button>

		<hr>

		<table class="table is-bordered is-narrow">
			<thead>
				<tr>
					<td>ID</td>
					<td>Name</td>
					<td>Shop ID</td>
					<td>Email</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="employee in employees">
					<td>{{employee.id}}</td>
					<td>{{employee.name}}</td>
					<td>{{employee.shop_id}}</td>
					<td>{{employee.email}}</td>
					<td>
						<button class="button is-success">Edit Employee</button>
						<button class="button is-danger">Delete Employee</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>


<div class="modal" ng-class="{'is-active': openNewEmployee == true}">
	<div ng-click="openNewEmployee = false" class="modal-background"></div>
	<div class="modal-container">
		<div class="modal-content">
			<div class="box">
				<div class="content">
					<h1 class="title is-2">New Employee</h1>

					<label class="label">Name</label>
					<p class="control">
						<input class="input" type="text" placeholder="Full Name..">
					</p>
					<label class="label">Email</label>
					<p class="control">
						<input class="input" type="text" placeholder="Email..">
					</p>
					<label class="label">Passcode</label>
					<p class="control">
						<input class="input" type="password" placeholder="Passcode..">
					</p>
					<label class="label">Shop</label>
					<p>
						<span class="select is-medium">
							<select ng-model="task">
								<option value="">Select Shop</option>
								<option value="{{shop.id}}" ng-repeat="shop in shops">{{shop.name}}</option>
							</select>
						  </span>
					</p>

					<label class="label">Is admin?</label>
					<p class="control">
						<label class="radio">
							<input type="radio" name="question">
							Yes
						</label>
						<label class="radio">
							<input type="radio" name="question">
							No
						</label>
					</p>

					<button ng-click="startTask()" ng-disabled="!workorder || !task" class="button is-large is-success">Create Employee</button>
				</div>
			</div>
		</div>
	</div>
	<button ng-click="openNewEmployee = false" class="modal-close"></button>
</div>
