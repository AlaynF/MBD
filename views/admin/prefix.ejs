<div class="section">
	<div class="container">
		<h2 class="title is-2">
			Prefixes
		</h2>

		<div class="columns">
			<div class="column">
				<button ng-click="goBack()" class="button is-primary is-medium">Go Back</button>
				<button ng-click="newPrefix()" class="button is-success is-medium">Create New Prefix</button>
			</div>
		</div>

		<hr>

		<table class="table is-bordered is-narrow">
			<thead>
				<tr>
					<td>Prefix</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="prefix in prefixes">
					<td>{{prefix.prefix}}</td>
					<td>
						<button ng-click="deletePrefix(prefix)" class="button is-danger">Delete Prefix</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>


<div class="modal" ng-class="{'is-active': openCreatePrefix == true}">
	<div ng-click="openCreatePrefix = false" class="modal-background"></div>
	<div class="modal-container">
		<div class="modal-content">
			<div class="box">
				<div class="content">
					<h1 ng-if="editing == false" class="title is-2">New Prefix</h1>

					<label class="label">Prefix</label>
					<p class="control">
						<input ng-model="prefix.prefix" class="input" type="text" placeholder="Number">
					</p>

					<button ng-click="createPrefix()" ng-disabled="!prefix || !prefix.prefix" class="button is-large is-success">Create Prefix</button>
				</div>
			</div>
		</div>
	</div>
	<button ng-click="openCreatePrefix = false" class="modal-close"></button>
</div>
