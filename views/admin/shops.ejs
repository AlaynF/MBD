<div class="section">
	<div class="container">
		<h2 class="title is-2">
			Shops
		</h2>

		<div class="columns">
			<div class="column">
				<button ng-click="goBack()" class="button is-primary is-medium">Go Back</button>
				<button ng-click="newShop()" class="button is-success is-medium">Create New Shop</button>
			</div>
		</div>

		<hr>

		<table class="table is-bordered is-narrow">
			<thead>
				<tr>
					<td>ID</td>
					<td>Symbol</td>
					<td>Name</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="shop in shops">
					<td>{{shop.id}}</td>
					<td>{{shop.symbol}}</td>
					<td>{{shop.name}}</td>
					<td>
						<button ng-click="editShop(shop)" class="button is-success">Edit Shop</button>
						<button ng-click="deleteShop(shop)" class="button is-danger">Delete Shop</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>


<div class="modal" ng-class="{'is-active': openNewShop == true}">
	<div ng-click="openNewShop = false" class="modal-background"></div>
	<div class="modal-container">
		<div class="modal-content">
			<div class="box">
				<div class="content">
					<h1 ng-if="editing == false" class="title is-2">New Shop</h1>
					<h1 ng-if="editing == true" class="title is-2">Edit Shop</h1>

					<label class="label">Name</label>
					<p class="control">
						<input ng-model="shop.name" class="input" type="text" placeholder="Name">
					</p>
					<label class="label">Symbol</label>
					<p class="control">
						<input ng-model="shop.symbol" class="input" type="text" placeholder="Symbol">
					</p>

					<button ng-if="editing == false" ng-click="createShop()" ng-disabled="!shop.name || !shop.symbol" class="button is-large is-success">Create Shop</button>
					<button ng-if="editing == true" ng-click="submitEditShop()" ng-disabled="!shop.name || !shop.symbol" class="button is-large is-success">Edit Shop</button>
				</div>
			</div>
		</div>
	</div>
	<button ng-click="openNewShop = false" class="modal-close"></button>
</div>
